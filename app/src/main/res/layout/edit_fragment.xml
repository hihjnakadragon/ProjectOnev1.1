<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    >

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="30dp"
        android:layout_marginLeft="5dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimaryDark"
        android:drawableTop="@drawable/dauxxxx"


        />
    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:textColor="#ffff"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:text="Title"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textSize="18dp"
        android:textColor="#ffff"
        android:text="Go for a walk"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"

        android:background="#ffff">
        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18dp"
            android:textColor="#111111"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_marginTop="107dp"
            android:layout_marginLeft="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_action_remind"/>
        <TextView
            android:layout_width="90dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="70dp"
            android:layout_height="20dp"
            android:textSize="17dp"
            android:text="Remind Me"
            />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton3"

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:clickable="true"
            android:layout_marginLeft="330dp"
            app:srcCompat="@android:drawable/ic_media_next" />

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="30dp"
            android:layout_marginTop="108dp"
            android:layout_height="28dp"
            android:layout_marginLeft="250dp"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/tbutton" />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:text="Date/Month/Year"
        android:layout_marginLeft="30dp"
        android:textSize="18dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:text="time/AM/PM"
            android:layout_marginLeft="230dp"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="70dp"
            android:text="Hiá»‡n time date month year"
            android:textSize="18dp"
            />
    </RelativeLayout>
</LinearLayout>





